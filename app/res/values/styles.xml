<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="spinner_item">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">left|center</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="spinner_item_dropdown">
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:textStyle">bold</item>
		<item name="android:cacheColorHint">#00000000</item>
	</style>
	<style name="default_text">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">12sp</item>
	</style>
	<style name="default_text_big">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="default_text_small">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">11sp</item>
	</style>
	<style name="default_text_green">
		<item name="android:textColor">#a1c05e</item>
	</style>
	<style name="home_menu_button">
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">11sp</item>
		<item name="android:layout_height">80dp</item>
		<item name="android:layout_width">80dp</item>
		<item name="android:padding">15dip</item>
		<item name="android:gravity">center</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:orientation">vertical</item>
		<item name="android:background">@drawable/default_button</item>
		<item name="android:drawablePadding">1dp</item>
		<item name="android:maxLines">1</item>
		<item name="android:scaleType">center</item>
	</style>
	<style name="default_box" parent="@style/default_text_big">
		<item name="android:padding">5dip</item>
		<item name="android:layout_marginTop">10dip</item>
		<item name="android:background">@drawable/opacity_25</item>
	</style>
	<style name="default_button">
		<item name="android:textColor">#98c25b</item>
		<item name="android:background">@drawable/default_button</item>
		<item name="android:padding">10dp</item>
	</style>
		<style name="default_button_small" parent="@style/default_button">
			<item name="android:textSize">11sp</item>
		</style>
			<style name="default_button_small_disabled" parent="@style/default_button_small">
				<item name="android:textColor">#648632</item>
			</style>
		<style name="default_button_med" parent="@style/default_button">
			<item name="android:textSize">12sp</item>
		</style>
		<style name="default_button_large" parent="@style/default_button">
			<item name="android:textSize">14sp</item>
		</style>
	<style name="default_app_style" parent="@android:style/Theme">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">false</item>
	</style>
	<style name="photo_detail_item">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">#ffffff</item>
		<item name="android:textSize">12px</item>
		<item name="android:gravity">left</item>
		<item name="android:visibility">gone</item>
		<item name="android:layout_marginBottom">7dip</item>
	</style>
</resources> 
