<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/opacity_25_green">

    <ImageView
        android:id="@+id/photo_thumb"
        android:layout_width="62px"
        android:layout_height="fill_parent"
        android:minWidth="62px"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dip"
        android:src="@drawable/loading_user_icon"
        android:background="@drawable/opacity_25"
        android:padding="6px"
    />
    
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="center"
	    android:layout_toRightOf="@id/photo_thumb">

	    <TextView
	        android:id="@+id/photo_title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="14px"
	        android:textColor="#A1C05E"
	        android:singleLine="true"
	        android:layout_centerVertical="true"
	    />
	    
	    <TextView
	    	android:id="@+id/photo_tags"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip" 
	        android:singleLine="true"
	        android:ellipsize="marquee"
	        android:layout_below="@id/photo_title"
	        android:textSize="12px"
	        android:textColor="#FFFFFF"
	    />
	    
   	</RelativeLayout>
    
</RelativeLayout>
